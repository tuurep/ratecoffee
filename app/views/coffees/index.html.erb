<p id="notice"><%= notice %></p>

<h1>Listing coffees</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Roastery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coffees.each do |coffee| %>
      <tr>
        <td><%= link_to coffee.name, coffee %></td>
        <td><%= coffee.style %></td>
        <td><%= coffee.roastery.name  %></td>
        <td><%= link_to 'Edit', edit_coffee_path(coffee), class:'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', coffee, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coffee', new_coffee_path if current_user %>
